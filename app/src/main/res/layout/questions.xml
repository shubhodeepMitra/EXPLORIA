<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
                android:background="#424242"
    tools:context="com.example.bidisha.ace.MainActivity">

    <RelativeLayout
        android:id="@+id/headerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="#1de9b6">

            <TextView
                android:id="@+id/currentQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:textColor="#000000"
                android:textSize="25dp"
                android:text="12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/currentQ"
                android:textColor="#000000"
                android:textSize="25dp"
                android:text=" | 20" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"


            android:textColor="#000000"

            >
            <!--
        mitra00:
            This shows the mins left
            -->

            <TextView
                android:id="@+id/time_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="#f44336"
                android:textColor="#000000"
                android:padding="5dp"
                android:textSize="25dp"
                android:text=" | 20" />

            <!--
     mitra00:
         This shows the seconds left
         -->

            <TextView
                android:id="@+id/time_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/time_sec"
                android:layout_alignParentTop="true"
                android:background="#f44336"
                android:textColor="#000000"
                android:padding="5dp"
                android:textSize="25dp"
                android:text="12" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerInfo"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="@string/ques1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginTop="60dp"
        android:backgroundTint="#1de9b6"
        android:id="@+id/ansQ" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Submit"
            android:background="#1de9b6"
            android:layout_alignParentLeft="true"
            android:textAllCaps="true"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/hint"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="Hint"
            android:background="@color/colorPrimary"
            android:textAllCaps="true"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</RelativeLayout>